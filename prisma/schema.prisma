generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  user
  admin
  influencer
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  phoneNumber String?
  company     String?
  fullName    String
  password    String
  role        UserRole @default(user)
  isApproved  Boolean  @default(true) // Influencers start as false, others as true
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

